<?php
// Check for empty fields
if(empty($_POST['name'])  		||
   empty($_POST['email']) 		||
   empty($_POST['phone']) 		||
   empty($_POST['message'])	||
   !filter_var($_POST['email'],FILTER_VALIDATE_EMAIL))
   {
	echo "No hay argumentos presentados .!";
	return false;
   }
	
$name = $_POST['name'];
$email_address = $_POST['email'];
$phone = $_POST['phone'];
$message = $_POST['message'];
	
// Crear el correo electrónico y enviar el mensaje
$to = 'suyenfaudito@gmail.com'; // Agregue su dirección de correo electrónico entre medio de la ' ' reemplazando yourname@yourdomain.com - Esta es la forma en que va a enviar un mensaje a.
$email_subject = "Website Contact Form:  $name";
$email_body = "You have received a new message from your website contact form.\n\n"."Here are the details:\n\nName: $name\n\nEmail: $email_address\n\nPhone: $phone\n\nMessage:\n$message";
$headers = "From: noreply@tecnologicafaudito.com.ve\n"; // Esta es la dirección de correo electrónico del mensaje generado será de . Recomendamos el uso de algo así como noreply@yourdomain.com .
$headers .= "Reply-To: $email_address";	
mail($to,$email_subject,$email_body,$headers);
return true;			
?>